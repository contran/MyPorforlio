<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div>
  <div class="span6 offset3">
    <%= form_for(:session_path, url: session_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, class: "text", style: "height:40px" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "text", style: "height:40px" %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

<p>New user? <%= link_to "Sign up now!", '/signup' %></p>

  </div>
</div>
